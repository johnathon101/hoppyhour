<h1>Listing beers</h1>

<table>
  <tr>
    <th>Brewery</th>
    <th>Name</th>
    <th>Desc</th>
    <th>Place</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @beers.each do |beer| %>
  <tr>
    <td><%= beer.brewery %></td>
    <td><%= beer.name %></td>
    <td><%= beer.desc %></td>
    <td><%= beer.place_id %></td>
    <td><%= link_to 'Show', place_beer_path(@place.id, beer.id) %></td>
    <td><%= link_to 'Edit', edit_place_beer_path(@place.id,beer.id) %></td>
    <td><%= link_to 'Destroy', place_beer_path(@place.id,beer.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

