
<table id = "beer_table">
  <thead>
    <th>Beer Name</th>
    <th>Brewery</th>
    <th>ABV:</th>
    <th>IBU:</th>
    <th>ADD</th>
  </thead>
  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, show_beer_path(beer.id) %></td>
        <td><%= beer.brewery %></td>
        <td><%= beer.abv || "N/A"%>%</td>
        <td><%= beer.ibu || "N/A"%></td>
        <td id="td_add_location"><%= link_to image_tag('addloc.png'), places_path(beer_id: beer.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
